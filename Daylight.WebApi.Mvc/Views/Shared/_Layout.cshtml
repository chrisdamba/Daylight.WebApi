    <meta name="apple-mobile-web-app-capable" content="yes" />
    
    <title>@(ViewBag.Title ?? "Dashboard | Daylight Adminstrap")</title>
    
    <!--jquery-->
    <link href="@Url.Content("~/assets/jquery/css/jquery-ui-1.8.16.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/datepicker/css/datepicker.css")" rel="stylesheet" type="text/css" />
