    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/css/lockscreen.css")">
    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/css/invoice.css")">
    

    <!-- FAVICONS -->
    <link rel="shortcut icon" href="@Url.Content("~/img/favicon/favicon.ico")" type="image/x-icon">
    <link rel="icon" href="@Url.Content("~/img/favicon/favicon.ico")" type="image/x-icon">

    <!-- GOOGLE FONT -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,300,400,700">

    <!-- Specifying a Webpage Icon for Web Clip
         Ref: https://developer.apple.com/library/ios/documentation/AppleApplications/Reference/SafariWebContent/ConfiguringWebApplications/ConfiguringWebApplications.html -->
